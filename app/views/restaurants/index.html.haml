- if @restaurant.any?
  - @restaurant.each do |restaurant|
    = link_to restaurant.name, restaurant_path(restaurant)
    = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
    = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    = link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
    = "Average rating: #{star_rating(restaurant.average_rating)}"
    %h3 
      Review for 
      = restaurant.name

      - if restaurant.reviews.any?
        %ul
          - restaurant.reviews.each do |review|
            %li 
              = review.thoughts
              %strong= "#{review.rating} /5"
              = link_to "Endorse #{restaurant.name}", review_endorsements_path(review), method: :post 
              %p= pluralize(review.endorsements.count, 'endorsement')
      - else
        %p No reviews

- else
  %h1 No restaurants yet!

%a(href='/restaurants/new') Add a restaurant